@startuml CCC

!define ICONURL https://raw.githubusercontent.com/tupadr3/plantuml-icon-font-sprites/v2.4.0
!includeurl ICONURL/common.puml
!includeurl ICONURL/material/nfc.puml


left to right direction
skinparam actorStyle awesome
skinparam actor {
BorderColor DarkRed
}

skinparam usecase {
BackgroundColor LightGoldenRodYellow
BorderColor DarkRed
ArrowColor DarkRed
}

!define SHADOW_COLOR #000000

skinparam {
  Shadowing true
  ShadowColor SHADOW_COLOR
}

actor :Utente Sanitario: as Med 
cloud cloud #FF9900;line:black;line.bold;text:black [
AWS Cloud
]
rectangle "Mobile App" {
  MATERIAL_NFC(nfc, Lettura NFC)
	(Iscrizione) as iscrizione
	(Ingresso) as ingresso
  (Visualizza Condizione/i) as vedi_condizione
  (Ricerca / Scarica Documento) as vedi_documento

    nfc --> vedi_documento
    nfc --> vedi_condizione
	  Med --> iscrizione
    Med --> ingresso
    Med --> nfc
    vedi_documento --> cloud
}
@enduml